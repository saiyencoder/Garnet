<h1>New Game!</h1>

<%= form_for(@game, url: "/games", method: :post) do |f| %>
  <%= f.hidden_field :season_id, value: @season.id %>
  <div>
    Team Stats For:
    <%= f.collection_select :team_id, @teams, :id, :name %>
  </div>
  <div>
    Week:
    <%= f.text_field :week %>
  </div>
  <div>
    Scorer:
    <%= f.text_field :scorer %>
  </div>
  <%= f.submit "Create Game" %>
<% end %>
