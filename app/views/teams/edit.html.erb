<h1>Edit Team Name</h1>

<%= form_tag "/teams/#{ @team.id }", method: :patch do %>
  Team Name: <input type="text" name="name" value="<%= @team.name %>">
  <br><br>
  <input type="submit" value="Update Team" class="btn btn-inverse btn-primary">
  <%= link_to "Cancel", "/teams/#{@team.id}", class: "btn btn-inverse btn-warning" %>
<% end %>