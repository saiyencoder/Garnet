<div class="panel col-sm-offset-3" style="width:40%">
  <div class="panel-heading" style="font-size: 40px;">Edit Team Name</div>
</div>


<div class="panel col-sm-offset-3" style="width:40%">
  <div class="panel-body new-game-form">
    <%= form_tag "/teams/#{ @team.id }", method: :patch do %>
      <h4>Team Name:</h4> 
      <input type="text" name="name" value="<%= @team.name %>">
      <br><br>
      <input type="submit" value="Update Team" class="btn btn-inverse btn-primary">
      <%= link_to "Cancel", "/teams/#{@team.id}", class: "btn btn-inverse btn-warning" %>
    <% end %>
</div>

