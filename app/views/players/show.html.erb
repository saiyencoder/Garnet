<% if @player.captain == true %>
  <h1><%= @player.name %> (Captain)</h1>
<% else %>
  <h1><%= @player.name %></h1>
<% end %>
<h3>Team: <%= @player.team.name %></h3>


<br><br>
<% @player.stats.each do |stat| %>
  Game(Week): <%= stat.game.week %><br>
  Points: <%= stat.points %><br>
  FGM: <%= stat.field_goal_made %><br>
  FGA: <%= stat.field_goal_attempt %><br>
  FG%: <%= stat.field_goal_percentage %>%<br>
  3PM: <%= stat.three_point_made %><br>
  3PA: <%= stat.three_point_attempt %><br>
  3P%: <%= stat.field_goal_attempt %>%<br>
  FTM: <%= stat.free_throws_made %><br>
  FTA: <%= stat.free_throw_attempts %><br>
  FT%: <%= stat.free_throw_percentage %>%<br>
  REB: <%= stat.rebounds %><br>
  AST: <%= stat.assists %><br>
  STL: <%= stat.steals %><br>
  BLK: <%= stat.blocks %><br>
  PFL: <%= stat.fouls %><br>
  <br>
<% end %>

<div>
  <%= link_to "Edit Player", "/players/#{ @player.id }/edit", class: "btn btn-warning" %>
  <%= link_to "Delete Player", "/players/#{ @player.id }", method: :delete, class: "btn btn-danger" %>
</div>