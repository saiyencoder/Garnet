<div class="panel col-sm-offset-3" style="width:40%">
  <div class="panel-heading" style="font-size: 40px;">Edit Player</div>
</div>


<div class="panel col-sm-offset-3" style="width:40%">
  <div class="panel-body new-game-form">
    <%= form_tag "/players/#{@player.id}", method: :patch do %>
      <div>
        <h4>Name:</h4>
        <input type="text" name="name" value="<%= @player.name %>">
      </div>
      <div>
        <h4>Team:</h4> 
        <select name="team_id" >
          <% @teams.each do |team| %>
            <option value="<%= team.id %>" <%= 'selected="selected"' if team.id == @player.team_id%>><%= team.name %></option>         
          <% end %>
        </select>
      </div>
      <div>
        <h4>Commissioner:</h4> 
        <select name="commissioner" >
          <option value="false" selected="selected">Not a Commissioner</option> 
          <option value="true">Commissioner</option>     
        </select>
      </div>
      <div>
        <h4>Captain:</h4> 
        <select name="captain" >
          <option value="false" selected="selected">Not a Captain</option> 
          <option value="true">Captain</option>     
        </select>
      </div>
      <div>
        <h4>Password:</h4> 
        <input type="password" name="password">
      </div>
      <div>
        <h4>Password Confirmation:</h4> 
        <input type="password" name="password_confirmation">
      </div>
      <br>
      <input type="submit" value="Update Player" class="btn btn-inverse btn-primary" >
      <%= link_to "Cancel", "/players/#{@player.id}", class: "btn btn-inverse btn-warning" %>
    <% end %>
  </div>









